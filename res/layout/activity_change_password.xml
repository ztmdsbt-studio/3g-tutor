<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.example.wanzhuan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/personal_background"
    android:orientation="vertical"
    tools:ignore="MissingPrefix" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/change_pwd_top_banner"
        android:gravity="center_vertical" >

        <Button
            android:layout_width="14.67dp"
            android:layout_height="28dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/backup"
            android:onClick="backToPrevious" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right|center_vertical"
                android:text="当前密码："
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/old_password"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/background_border_gray"
                android:inputType="textPassword"
                android:paddingLeft="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right|center_vertical"
                android:text="新密码："
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/tvNewPassword"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/background_border_gray"
                android:inputType="textPassword"
                android:paddingLeft="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp" >

            <TextView
                android:id="@+id/tvNewConfirmPassword"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right|center_vertical"
                android:text="确认新密码："
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/tvNewPassword_repet"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/background_border_gray"
                android:inputType="textPassword"
                android:paddingLeft="8dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_modify_pwd_cancel"
            android:onClick="backToPrevious"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/selector_modify_pwd_conform"
            android:onClick="confirmExchange"
            android:paddingLeft="8dp"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>