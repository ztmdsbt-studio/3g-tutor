<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/banner2"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="73dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="65dp" >

        <TextView
            android:id="@+id/tvTutorName"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="辅导员姓名"
            android:textColor="@color/yahui"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="68dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="65dp" >

        <TextView
            android:id="@+id/tv_tutorusers_count"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="22"
            android:textColor="@color/yahui"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="88dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="141dp"
        android:layout_marginTop="65dp" >

        <TextView
            android:id="@+id/tv_tutorusers_lastmouth"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="32"
            android:textColor="@color/yahui"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="91dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="229dp"
        android:layout_marginTop="65dp" >

        <TextView
            android:id="@+id/tv_tutorusers_thismouth"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="65"
            android:textColor="@color/yahui"
            android:textSize="10sp" />
    </LinearLayout>

</RelativeLayout>
