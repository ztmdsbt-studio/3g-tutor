<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.example.wanzhuan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/personal_background"
    android:orientation="vertical"
    tools:ignore="MissingPrefix" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_banner_black"
        android:gravity="center_vertical" >

        <Button
            android:layout_width="14.67dp"
            android:layout_height="28dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/backup"
            android:onClick="backToPrevious" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:text="找回密码"
                android:textColor="@color/white"
                android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right|center_vertical"
                android:text="手机号："
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_current_phone"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right|center_vertical"
                android:text="00000000000"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_btn_send_password"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right|center_vertical"
                android:text="@string/sendPassword"
                android:textColor="@color/croci"
                android:textSize="14sp" />

        
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right|center_vertical"
                android:text="新密码："
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/tvUserName"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/background_border_gray"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right|center_vertical"
                android:text="确认新密码："
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/tvUserScore"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/background_border_gray"
                android:inputType="textPassword" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_modify_pwd_cancel"
            android:onClick="backToPrevious"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/selector_modify_pwd_conform"
            android:onClick="confirmPwd"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>